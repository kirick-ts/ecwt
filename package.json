{
	"name": "ecwt",
	"version": "0.1.0-beta.1",
	"description": "Encrypted CBOR-encoded Web Token",
	"main": "src/main.js",
	"type": "module",
	"exports": {
		".": {
			"import": "./src/main.js",
			"require": "./dist/ecwt.cjs"
		}
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"dependencies": {
		"cbor-x": "1.5.6",
		"base-x": "4.0.0",
		"evilcrypt": "0.2.0-beta.1"
	},
	"peerDependencies": {
		"@kirick/redis-client": "^4.0.1-beta.3",
		"@kirick/snowflake": "^0.2.0-beta.3",
		"lru-cache": "^7"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.21.8",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0"
	},
	"scripts": {
		"test": "npm run test-node && bun test",
		"test-node": "NODE_OPTIONS=--experimental-vm-modules jest",
		"build": "bun run build-cjs",
		"build-cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/ecwt.cjs src/main.js",
		"npm-publish": "bun run build && npm publish --tag beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/ecwt.git"
	},
	"keywords": [
		"ecwt",
		"jwt",
		"cbor",
		"encrypted",
		"crypto",
		"aes"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/ecwt/issues"
	},
	"homepage": "https://github.com/kirick13/ecwt#readme"
}
